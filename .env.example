# =============================================================================
# StudioOS Production Environment Variables
# Copy this to .env and fill in with secure values
# =============================================================================

# Database credentials (required)
POSTGRES_USER=studioos
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=studioos

# JWT authentication (required)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here

# Signed URL secret for presigned asset downloads (required)
# Generate with: openssl rand -base64 32
SIGNED_URL_SECRET=your-signed-url-secret-here

# CORS origins (comma-separated, or * for development)
CORS_ORIGINS=https://app.studioos.io,https://studio.yourdomain.com

# Optional: Pre-built Docker image name
STUDIOOS_IMAGE=studioos/signal:latest

# Optional: Log level (error, warn, info, debug, trace)
LOG_LEVEL=info

# Optional: Signed URL expiry in seconds (default: 3600 = 1 hour)
SIGNED_URL_EXPIRY=3600

# ------------------------------
# S3 / Object storage (optional)
# ------------------------------
# Set STORAGE_PROVIDER to 's3' to enable S3-backed storage. Leave unset to use local filesystem.
STORAGE_PROVIDER=
# S3-compatible endpoint (for AWS S3 leave blank or use https://s3.amazonaws.com)
S3_ENDPOINT=
S3_REGION=
S3_BUCKET=
S3_ACCOUNT_ID=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=false
S3_UPLOAD_EXPIRY=3600

# ------------------------------
# OpenAI / LLM configuration (optional)
# ------------------------------
# API key for the OpenAI-compatible endpoint
OPENAI_API_KEY=
OPENAI_ORG=
# API base (use custom proxy or Azure OpenAI if needed)
OPENAI_API_BASE=https://api.openai.com
# Model to use (example: raptor-mini-preview)
OPENAI_MODEL=raptor-mini-preview
OPENAI_TIMEOUT=30
